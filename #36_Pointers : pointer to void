using namespace std;

void printValue(void* data, char type) {
    if (type == 'i') {
        cout << "int: " << *((int*)data) << endl;
    } else if (type == 'f') {
        cout << "float: " << *((float*)data) << endl;
    } else if (type == 'c') {
        cout << "char: " << *((char*)data) << endl;
    }
}

int main() {
    int a = 5;
    float b = 3.14;
    char c = 'X';

    printValue(&a, 'i');
    printValue(&b, 'f');
    printValue(&c, 'c');

    return 0;
}
```

