    string line;
    bool updated = false;

    if (inFile.is_open() && tempFile.is_open()) {
        while (getline(inFile, line)) {
            if (line == oldName) {
                tempFile << newName << endl;  // ููุชุจ ุงูุงุณู ุงูุฌุฏูุฏ ุจุฏู ุงููุฏูู
