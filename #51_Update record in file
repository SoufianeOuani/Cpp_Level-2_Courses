                tempFile << line << endl;     // ููุชุจ ุงูุณุทุฑ ููุง ูู
            }
        }

        inFile.close();
        tempFile.close();

        remove("students.txt");
        rename("temp.txt", "students.txt");

        if (updated)
            cout << "โ ุชู ุชุญุฏูุซ ุงูุงุณู ุจูุฌุงุญ.\n";
        else
            cout << "โ ุงูุงุณู ุบูุฑ ููุฌูุฏ.\n";
    } else {
        cout << "โ๏ธ ุชุนุฐุฑ ูุชุญ ุงููููุงุช.\n";
    }

    return 0;
}
