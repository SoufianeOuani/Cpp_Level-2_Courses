#include <fstream>
#include <vector>
#include <string>
using namespace std;

int main() {
    ifstream file("students.txt");
    vector<string> names;
    string name;

    if (file.is_open()) {
        while (getline(file, name)) {
            names.push_back(name);  // ÙƒÙ„ Ø§Ø³Ù… Ù†Ø¯Ø®Ù„Ùˆ ÙÙ€ vector
        }
        file.close();
    } else {
        cout << "âš ï¸ ØªØ¹Ø°Ø± ÙØªØ­ Ø§Ù„Ù…Ù„Ù" << endl;
    }

    // Ù†Ø¹Ø±Ø¶ Ø§Ù„Ù…Ø­ØªÙˆÙ‰
    cout << "ğŸ“‹ Ù„Ø§Ø¦Ø­Ø© Ø§Ù„Ø·Ù„Ø§Ø¨:\n";
    for (string n : names) {
        cout << "- " << n << endl;
    }

    return 0;
