```cpp
#include <iostream>
#include <fstream>
#include <vector>
using namespace std;

struct Person {
    string name;
    int age;
};

int main() {
    ifstream file("people.txt");
    vector<Person> people;
    string name;
    int age;

    if (file.is_open()) {
        while (file >> name >> age) {
            people.push_back({name, age});
        }
        file.close();
    }

    for (auto p : people) {
        cout << p.name << " - " << p.age << " Ø³Ù†Ø©" << endl;
    }

    return 0;
}
