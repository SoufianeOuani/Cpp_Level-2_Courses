#include <fstream>
#include <vector>
using namespace std;

int main() {
    ifstream file("numbers.txt");
    vector<int> numbers;
    int num;

    if (file.is_open()) {
        while (file >> num) {
            numbers.push_back(num);
        }
        file.close();
    }

    // Ø¹Ø±Ø¶ Ø§Ù„Ø£Ø±Ù‚Ø§Ù…
    for (int n : numbers) {
